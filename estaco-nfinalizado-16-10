<body>
    <script>
    var tinta=window.prompt("digite uma estação");
    switch (tinta){
        case 'verão':
        case 'VERÃO':
        case 'Verão':
        document.write('MT quente');
        break;
        case 'inverno':
        case 'INVERNO':
        case 'Inverno':
        document.write('Irei pintar de vermelho');
        break;
        case 'azul':
        case 'AZUL':
        case 'Azul':
        document.write('Irei pintar de azul');
        break;
        default:
        document.write('não tem uma cor escolhida');
    }
    
    </script>
</body>
</html>
