//Mudando cor e frase do bot√£o ao tocar// 

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div onmouseover="mOver(this)"
    onmouseout="mOut(this)"
    style="background-color: rgba(226, 213, 198, 0.667); width:120px; height:20px; padding:40px;">Passe o mouse sobre mim</div>
    <script>
        function mOver(obj){obj.innerHTML="obrigada"}
        function mOut(obj){obj.innerHTML="passe o mouse"}
    </script>
    
</body>
</html>

//Mostra horario ao tocar no botao//
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <button id="data">Horario</button>
    <p id="a"></p>
    <script>
        document.getElementById("data").onclick=displayDate;
        function displayDate(){
            document.getElementById("a").innerHTML=Date();
        }
    </script>
    
</body>
</html>
